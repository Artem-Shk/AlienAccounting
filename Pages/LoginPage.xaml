<Page x:Class="AlienAccounting.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlienAccounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Style="{DynamicResource GridStyle}">
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,288,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="120" Background="Transparent" Foreground="Lime" BorderBrush="Lime" TextAlignment="Center"/>
        <Image HorizontalAlignment="Center" Height="55" Margin="0,109,0,0" VerticalAlignment="Top" Width="100" Source="/Pages/8bb28a6366f6b141eb0dfe701ed51300.png"/>
        <Button Content="Login" Style="{DynamicResource ButtonStyle}" Margin="327,386,327,35"></Button>
        <TextBox x:Name="Password"  HorizontalAlignment="Center" Margin="0,321,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" Background="Transparent" Foreground="Lime" BorderBrush="Lime" TextAlignment="Center"/>
    </Grid>
</Page>
